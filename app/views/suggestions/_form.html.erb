<%= simple_form_for @sug, :html => {:class => "form-horizontal"} do |f| %>
<div class="form-inputs">
	<%= f.input :name, required: true %>
  <%= f.input :email, required: true %>
  <%= f.input :suggestion_data, input_html: { maxlength: 50, :rows => 5 },
                                required: true,
                                hint: "Maximum 150 characters",
                                label: "Suggestion/Query" %>
  <div class="control-group <%= (@sug.valid_with_captcha? || @sug.new_record?) ? "" : "error" %>">
    <label class="control-label">Captcha</label>
    <div class="controls">
       <%= f.simple_captcha :placeholder => "Enter above characters" %>
    </div>
</div>
</div>

<div id="contact_submit">
<%= f.button :submit, "Submit", :class => "btn-primary btn-large" %>
</div>

<% end %>