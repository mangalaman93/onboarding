<div class="row-fluid">
	<div class="span4">
		<h3>Plans Summary:</h3><br>
	</div>

	<div class="span6">
		<table class="table table-striped table-bordered table-condensed table-hover">
		<tr>
			<th>Plan Title</th>
			<th>User</th>
			<th>Plan Status</th>
		</tr>
		<% current_user.plans.each do |each_plan| %>
			<tr>
				<td><a href="<%= plan_path each_plan %>"><%= each_plan.title %></a></td>
				<td><%= User.find(each_plan.user_id).email %></td>
				<td><%= each_plan.completion_status %></td>
			</tr>
		<% end %>
		</table>
	</div>
</div>



