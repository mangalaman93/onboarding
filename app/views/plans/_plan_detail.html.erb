<h3>Plan Overview</h3>

<div class="row-fluid">
	<div class="span6 offset2">
		<div class="row">
			<% @user_plan.tasks.each do |each_task| %>
			<h4><%= each_task.title %></h4>
				<table class="table table-striped table-bordered table-condensed table-hover">
					<tr>
						<th>Description</th>
						<th>Comments</th>
						<th>Duration</th>
						<th>Due-Date</th>
						<th>Is Done</th>						
					</tr>
					<% each_task.items.each do |each_item| %>
					<tr>
						<td><%= each_item.description %></td>
						<td><%= each_item.comments %></td>
						<td><%= each_item.duration %></td>
						<td><%= each_item.due_date %></td>
						<td><%= each_item.is_done %></td>
					</tr>
					<% end %>
				</table>
			<% end %>
		</div>
	</div>
</div>

